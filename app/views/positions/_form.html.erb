<% modal ||= false %>
<% remote = modal ? true : false %>
<%= simple_form_for(@position, remote: remote, html: { role: :form, 'data-type' => :script, 'data-model' => 'position', class: "form-horizontal", multipart: true }, defaults: { input_html: { class: "form-control" }, label: false }) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :position, placeholder: "Cargo" %>
    <span class="help-block"></span>
  </div>
  <div class="form-actions">
    <hr>
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>
